<!-- 승인된 자바스크립트 원본과 승인된 리디렉션 URI -->
<bean id="googleOAuth2Parameters"
  class="org.springframework.social.oauth2.OAuth2Parameters">
  <property name="scope" value="https://www.googleapis.com/auth/plus.login" />
  <property name="redirectUri" value="http://localhost:8080/diet/login" />  
</bean>



<!-- INTERCEPTOR -->
	<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>			
			<bean class="diet.interceptors.Login_interceptor" />
		</mvc:interceptor>		
		</mvc:interceptors>
<mvc:interceptors>
		<mvc:interceptor>
			<mvc:mapping path="/**"/>			
			<bean class="diet.interceptors.Admin_interceptor" />
		</mvc:interceptor>		
		</mvc:interceptors>

